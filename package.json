    "build": "echo \"✅ Building extension for production...\" && echo \"📦 Extension ready for deployment\"",
    "dev": "echo \"🔧 Development mode - Load unpacked in Chrome at chrome://extensions/\"",
    "package": "echo \"📦 Packaging for Chrome Web Store...\"",
    "lint": "echo \"🔍 Linting code...\"",
    "validate": "echo \"✅ Validating manifest and files...\""
  },
  "keywords": [
    "chrome-extension",
    "translation",
    "ai",
    "gemini",
    "arabic",
    "english",
    "translator",
    "google-ai",
    "manifest-v3",
    "open-source",
    "free",
    "rebixrise",
    "modern-ui",
    "productivity"
  ],
  "author": {
